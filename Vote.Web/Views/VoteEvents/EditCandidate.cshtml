@model Vote.Web.Models.CandidateViewModel

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Candidate</h4>
<hr />

<div class="row">
	<div class="col-md-4">
		<form asp-action="EditCandidate" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<input type="hidden" asp-for="VoteEventId" />
			<input type="hidden" asp-for="ImageUrl" />
			<div class="form-group">
				<label asp-for="ImageFile" class="control-label"></label>
				<input asp-for="ImageFile" class="form-control" type="file" />
				<span asp-validation-for="ImageFile" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Proposal" class="control-label"></label>
				<input asp-for="Proposal" class="form-control" />
				<span asp-validation-for="Proposal" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Update Candidate" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model.VoteEventId">Back to the voting event</a>
</div>